
@{
    ViewData["Title"] = "Index";
}

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 form-group">
                    </div>
                </div>
            </div>
        </section>

        <section class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-6 offset-3">
                        <!-- Pie CHART -->
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">Pie Chart</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="chart">
                                    <canvas id="PieChart" width="300" height="200"></canvas>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </section>
    </div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
@section scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                contentType: "application/json",
                url: '@Url.Action("GetUserPerTimeSheet", "Charts")',
            }).done(function (result) {
                var labelsArray = [];
                var dataArray = [];
                $.each(result, function (index, data) {
                    labelsArray.push(data.user);
                    dataArray.push(data.totalHours);
                });
                renderChart(labelsArray, dataArray);
            })

        });


        function renderChart(labels, data) {
            var ctx = document.getElementById("PieChart");
            var chart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Hour Per TimeSheet', data: data,
                        backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                scales: {
                    yAxes: [{
                        ticks: {   beginAtZero: true  }
                    }]
                    }
                }
            });
        }
    </script>

}


